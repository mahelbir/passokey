@model Application.Models.PasskeyRegistration.PasskeyRegistrationViewModel

@{
  Layout = "_AuthLayout";
  ViewData["Title"] = "Registration";
}

<div class="d-flex justify-content-center">
  <div class="col-md-2">
    <div class="card">
      <form autocomplete="off">
        <div class="card-body">
          <div class="form-group">
            <input type="text" class="form-control" name="username" placeholder="Username" value="@Model.Username">
          </div>
          <div class="d-flex justify-content-center">
            <button class="btn btn-passkey" type="submit">
              <i class="material-symbols-outlined">shield_person</i>
              Register
            </button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <script>
    const clientId = "@Model.ClientId";
  </script>
  <script type="module" src="~/Cs/PasskeyRegistration/Index.js" asp-append-version="true"></script>
}